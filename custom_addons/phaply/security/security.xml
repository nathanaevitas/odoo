<openerp>
    <data>
        <record id="group_manager" model="res.groups">
            <field name="name">Phap Ly / Manager</field>
        </record>
        <record id="group_employee" model="res.groups">
            <field name="name">Phap Ly / Employee</field>
        </record>
        
        <record id="only_responsible_can_modify" model="ir.rule">
            <field name="name">Only Responsible can modify Docs</field>
            <field name="model_id" ref="model_phaply_hoso"/>
            <field name="groups" eval="[(4, ref('group_employee'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">
                ['|', ('emloyee','=',False),
                      ('emloyee','=',user.id)]
            </field>
        </record>
    </data>
</openerp>