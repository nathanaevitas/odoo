<openerp>
    <data>
		<record model="ir.ui.view" id="hoso_form_view">
			<field name="name">phaply.hoso.form</field>
			<field name="model">phaply.hoso</field>
			<field name="arch" type="xml">
				<form string="Ho So Form">
                    <header>
                        <button name="new" type="workflow"
                                string="Moi lam"
                                states="working,done"/>
                        <button name="working" type="workflow"
                                string="Dang lam" states="new"
                                class="oe_highlight"/>
                        <button name="done" type="workflow"
                                string="Da hoan tat" states="working"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
					<sheet>
						<group>
							<field name="name"/>
							<field name="customer"/>
							<field name="phone"/>
							<field name="request"/>
							<field name="deadline"/>
							<field name="cost"/>
							<field name="paid"/>
							<field name="address"/>
							<field name="ward"/>
							<field name="district"/>
							<field name="emloyee" context="{'default_groups_ref': ['base.group_partner_manager']}"/>
							<field name="responsible_id"/>
							<field name="day_reception"/>
							<field name="date_start"/>
							<field name="date_end"/>
							<field name="feedback"/>
							<field name="reason"/>
							<field name="note"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record model="ir.ui.view" id="hoso_tree_view">
			<field name="name">phaply.hoso.tree</field>
			<field name="model">phaply.hoso</field>
			<field name="arch" type="xml">
				<tree string="Ho So Tree" colors="blue:state=='new';red:state=='working'">
					<field name="name"/>
					<field name="state" invisible="1"/>
					<field name="customer"/>
					<field name="phone"/>
					<field name="deadline"/>
					<field name="cost"/>
					<field name="paid"/>
					<field name="address"/>
					<field name="ward"/>
					<field name="district"/>
					<field name="emloyee"/>
					<field name="responsible_id"/>
					<field name="day_reception"/>
					<field name="date_start"/>
					<field name="date_end"/>
				</tree>
			</field>
		</record>
		
        <!-- calendar view -->
        <record model="ir.ui.view" id="hoso_calendar_view">
            <field name="name">phaply.hoso.calendar</field>
            <field name="model">phaply.hoso</field>
            <field name="arch" type="xml">
                <calendar string="Ho So Calendar" date_start="date_start"
                          date_stop="date_end"
                          color="emloyee">
                    <field name="name"/>
                </calendar>
            </field>
        </record>
        
        <record model="ir.ui.view" id="hoso_graph_view">
            <field name="name">phaply.hoso.graph</field>
            <field name="model">phaply.hoso</field>
            <field name="arch" type="xml">
                <graph string="Ho So Graph">
                    <field name="doc_id"/>
                    <field name="district" type="measure"/>
                </graph>
            </field>
        </record>
        
        <record model="ir.ui.view" id="hoso_search_view">
            <field name="name">phaply.search</field>
            <field name="model">phaply.hoso</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter name="my_docs" string="Ho So Cua Toi"
                            domain="[('emloyee', '=', uid)]"/>
                    <group string="Group By">
                        <filter name="by_emloyee" string="Nguoi lam"
                                context="{'group_by': 'emloyee'}"/>
                    </group>
                </search>
            </field>
        </record>
        
		
		<record model="ir.actions.act_window" id="phaply_hoso_action">
			<field name="name">Ho So Phap Ly</field>
			<field name="res_model">phaply.hoso</field>
			<field name="view_mode">tree,form,calendar,graph</field>
            <field name="context" eval="{'search_default_my_docs': 1}"/>
		</record>
		
		<menuitem name="Phap Ly" id="phaply_menu" sequence="85"/>
		<menuitem name="Ho So" id="hoso_menu" parent="phaply_menu" sequence="20"/>
		<menuitem name="Thong tin HS" id="phaply_hoso_menu" parent="hoso_menu" sequence="10" action="phaply_hoso_action"/>
    </data>
</openerp>