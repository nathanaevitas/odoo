<openerp>
    <data>
		<record model="ir.ui.view" id="hoso_form_view">
			<field name="name">phaply.hoso.form</field>
			<field name="model">phaply.hoso</field>
			<field name="arch" type="xml">
				<form string="Ho So Form">
					<sheet>
						<group>
							<field name="name"/>
							<field name="customer"/>
							<field name="phone"/>
							<field name="request"/>
							<field name="deadline"/>
							<field name="cost"/>
							<field name="paid"/>
							<field name="address"/>
							<field name="ward"/>
							<field name="district"/>
							<field name="emloyee"/>
							<field name="day_reception"/>
							<field name="date_start"/>
							<field name="date_end"/>
							<field name="feedback"/>
							<field name="reason"/>
							<field name="note"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record model="ir.ui.view" id="hoso_tree_view">
			<field name="name">phaply.hoso.tree</field>
			<field name="model">phaply.hoso</field>
			<field name="arch" type="xml">
				<tree string="Ho So Tree">
					<field name="name"/>
					<field name="customer"/>
					<field name="phone"/>
					<field name="request"/>
					<field name="deadline"/>
					<field name="cost"/>
					<field name="paid"/>
					<field name="address"/>
					<field name="ward"/>
					<field name="district"/>
					<field name="emloyee"/>
					<field name="day_reception"/>
					<field name="date_start"/>
					<field name="date_end"/>
				</tree>
			</field>
		</record>
		
        <!-- calendar view -->
        <record model="ir.ui.view" id="hoso_calendar_view">
            <field name="name">phaply.hoso.calendar</field>
            <field name="model">phaply.hoso</field>
            <field name="arch" type="xml">
                <calendar string="Ho So Calendar" date_start="date_start"
                          date_stop="date_end"
                          color="emloyee">
                    <field name="name"/>
                </calendar>
            </field>
        </record>
        
        <record model="ir.ui.view" id="hoso_graph_view">
            <field name="name">phaply.hoso.graph</field>
            <field name="model">phaply.hoso</field>
            <field name="arch" type="xml">
                <graph string="Ho So Graph">
                    <field name="doc_id"/>
                    <field name="district" type="measure"/>
                </graph>
            </field>
        </record>
		
		<record model="ir.actions.act_window" id="phaply_hoso_action">
			<field name="name">phaply.hoso.action</field>
			<field name="res_model">phaply.hoso</field>
			<field name="view_mode">tree,form,calendar,graph</field>
		</record>
		
		<menuitem name="Ho So" id="phaply_menu" sequence="85"/>
		<menuitem name="Ho So" id="hoso_menu" parent="phaply_menu" sequence="10"/>
		<menuitem name="Thong tin HS" id="phaply_hoso_menu" parent="hoso_menu" sequence="10" action="phaply_hoso_action"/>
    </data>
</openerp>